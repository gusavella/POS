<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>

<main>
    <div class="title-selling">
        <h1>Todos los Productos</h1>
    </div>
    <div class="main-container">
     
        <div class="container-selling">
            <section class="best-selling">
                <% for(let i=0;i<products.length;i++){%>
                    <% if(products[i].category.name){ %>
                        <div class="card">
                            <div class="face front">
                                <img src="<%=products[i].image%>" alt="imagen-producto">
                                <h3><%=products[i].short_description %></h3>
                            </div>
                            <div class="face back">
                                <h4><%=products[i].name%></h4>
                                <p>Categor√≠a: <%=products[i].category.name%></p>
                                <div class="link-buy">
                                    <a href="/products/<%=products[i].id%>">$<%=products[i].price %> - COMPRAR</a>
                                </div>
                            </div>
                        </div>
                    <%} %>
                <%} %>
            </section>
        </div>
    </div>
</main>

  <%- include('../partials/footer') %>
</body>

</html>