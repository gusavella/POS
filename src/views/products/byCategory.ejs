<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>

<main>
    <div class="title-selling">
        <h1>Productos de la categoria <%= category_name %></h1>
    </div>
    <div class="main-container">
     
        <div class="container-selling">
            <section class="best-selling">
                <% for(let i=0;i<products.length;i++){%>
                   
                        <div class="card">
                            <div class="face front">
                                <img src="<%=products[i].image%>" alt="imagen-producto">
                                <h3><%=products[i].short_description %> </h3>
                                <p class="price-front-card">$ <%=products[i].price %></p>
                            </div>
                            <div class="face back">
                                <h4><%=products[i].short_description%></h4>
                              
                                <div class="link-buy">
                                    <a href="/products/<%=products[i].id%>"><%=products[i].price %> - COMPRAR</a>
                                </div>
                            </div>
                        </div>
                  
                <%} %>
            </section>
        </div>
    </div>
</main>

  <%- include('../partials/footer') %>
  
</body>

</html>