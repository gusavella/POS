<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body class="body-main">
  <%- include('../partials/header') %>
    <main>

        <div class="container-main">
            <div class="container-section">

                <% for(let j=0;j<category.length;j++){ %>
                <div >
                    <div class="section-title">
                        <div class="box-title">
                            <h3><%= category[j].name%></h3>
                        </div>
                        <div class=" button">
                            <a href=<%=`/products/category/${category[j].id} `%>  >Ver todos</a>
                        </div>
                    </div>
                    <section class="best-selling">
                        <% let count = 0 %> 
                        
                        <% for(let i=0;i<products.length;i++){%>
                            <% if(products[i].category.id == category[j].id && count<=3){ %>

                                <% count++ %> 
                                
                                <div class="card">
                                    <div class="face front">
                                        <img src="<%=products[i].image%>" alt="imagen-producto">
                                        <h3><%=products[i].short_description %> </h3>
                                        <p class="price-front-card">$ <%=products[i].price %></p>
                                    </div>
                                    <div class="face back">
                                        <h4><%=products[i].name%></h4>
                                        <p>Categor√≠a: <%=products[i].category.name%></p>
                                        <p>Marca: <%=products[i].mark.name%></p>
                                        <div class="link-buy">
                                            <a href="/products/<%=products[i].id%>">$<%=products[i].price %> - COMPRAR</a>
                                        </div>
                                    </div>
                                </div>
                            <%} %>
                        <%} %>
                    </section>
                </div>
                </div>
                <%}%>

            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>
    <script src="/js/carousel.js"></script>

</body>

</html>